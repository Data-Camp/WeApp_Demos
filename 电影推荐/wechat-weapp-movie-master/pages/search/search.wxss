@import "../../component/message/message.wxss";
.search-hd {
    width: 100%;
    height: 140rpx;
    background-color: #fff;
    border-bottom: 1px solid #f8f8f8;
}
.search-area {
    box-sizing: border-box;
    position: relative;
    margin: 30rpx;
}

.search-type {
    position: absolute;
    z-index: 11;
    top: 0;
    left: 0;
    width: 120rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-right: 1px solid #eee;
}

.search-txt {
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    padding-left: 140rpx;
    padding-right: 20rpx;
    border-radius: 10rpx;
    border: 1px solid #eee;
    font-family: "微软雅黑";
}

.search-btn {
    position: absolute;
    z-index: 11;
    top: 0;
    right: 0;
    height: 80rpx;
    width: 120rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
}

.search-btn::after{
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
}

.search-keyword {
    padding: 30rpx;
}

.search-keyword-title {
    padding-left: 20rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    border-left: 10rpx solid #47a86c;
}

.search-keyword-item {
    display: inline-block;
    padding: 10rpx;
    border: 1px solid #ccc;
    border-radius: 15rpx;
    background-color: #fbfbfb;
    margin: 0 10rpx 10rpx 0;
    color: #555;
}