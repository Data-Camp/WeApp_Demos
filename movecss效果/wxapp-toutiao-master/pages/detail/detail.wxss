/************频道管理********************************/
.menu_list_box{
	background:#f3f3f3;
	position:fixed;
	top:0;
	left:0;
	right:0;
	bottom:0;
	width:100%;
	height:100%;
	z-index:99;
	padding:20px;
	box-sizing: border-box;
	transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0s;
	/* transition: all 1s; */
	visibility:hidden;
	  opacity:0;
	  transform: scale(0); 
	/* opacity:0;
	display:none; */
}
.menu_list_box.show{
	visibility:visible;
	opacity:1;
	transform: scale(1); 
}

.menu_list_box .close{
	position:fixed;
	top:10px; 
	right:10px;
	width:20px;
	height:20px;
	display:inline-block;
	background:url(data:image/png;base64,) no-repeat center center;
	background-size:26px;
}
.menu_list_box  .title{
	display:inline-block;
	width:100%;
	overflow: hidden;
	font-size:16px;
	margin:10px 0;
}
.menu_list_box .news_menu_item{
	font-size:12px;
	background:#fff;
	border:1px solid #ccc;
	padding:6px 10px;
	text-align:center;
	border-radius:3px;
	margin-right:16px;
	margin-bottom: 14px;
	float:left;
	color:#666;
	position:relative;
}

.menu_list_box .news_menu_item .close{
	position:absolute;
	top:-6px;
	right:-6px;
	border-radius:50%;
	display:inline-block;
	width:14px;
	height:14px;
	background:rgba(0, 0, 0, 0.3) url(data:image/png;base64,) no-repeat center center;
	background-size:14px;
	transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0s;
	opacity: 0;
	transform: scale(0);
	visibility:hidden;
}

.menu_list_box .news_menu_item .close.show{
	opacity: 1;
	transform: scale(1);
	visibility:visible;
}