.title{
    display: block;
    margin:15px;
}
.input-section {
    width: 100%;
    margin: 10px 0;
    display: flex;
    flex-direction: row;
}
.input-container {
    width:100%;
    height:40px;
    padding-left:0;
    border: 1px solid #d2d2d2;
    flex: 1;
    /*background:url(../../img/input_search.png) center left no-repeat;*/
}
.input-section input {
    display: block;
    flex: 6;
    width:90%;
    margin:0 5%;
    border: 1px solid #d2d2d2;
    color: #ea8010;
    border-radius: 2px;
}
.input-section button {
    flex: 1;
    margin-top: 0;
    font-size: 16px;
    margin-right: 3%;
}
.heroes {
    display: flex;
    flex-direction: row;
    width: 96%;
    padding: 0 2%;
    flex-flow: row wrap;
}
.heroes-row {
    width: 50%;
    margin: 10px 0;

}
.heroes-row-in {
    display: flex;
    flex-direction: row;
    padding: 5% 5%;
}
.heroes-row-in image {
    width: 50px;
    height: 50px;
}
.one-tag {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-left: 5px;
}
.one-tag text {
    font-family:"微软雅黑";
    display: block;
}
.one-tag-title {
    font-size: 14px;
}
.one-tag-name {
    font-size: 12px;
    color: #d2d2d2;
}
.one-tag-pos {
    font-size: 12px;
    color: blue;
}