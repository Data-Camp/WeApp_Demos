page{
    background: #fff;
    font-size: 14px;
}
.container .brand_item{
    margin: 5px 0;
    border-top: 1px solid #e4e4e4;
    border-bottom: 1px solid #e4e4e4;
}
.container .brand_item .pic{
    float: left;
    width: 50%;
    height: 120px;
}
.right_cont{
    float: right;
    width: 50%;
    text-align: center;
}
.right_cont .logo{
    display: block;
    width:90px;
    height: 46px;
    margin: 5px auto 0;
}
.right_cont text{
    display: block;
    margin: 5px 0;
}
.right_cont .brief{
    font-size: 12px;
    color: #939393;
}
.right_cont .price{
    color: #f16236;
}